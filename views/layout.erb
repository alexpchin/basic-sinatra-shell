<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title><%= @title %></title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta http-equiv="expires" content="0">
  <meta http-equiv="Content-Script-Type" content="text/javascript">
  <meta http-equiv="Content-Style-Type" content="text/css">
  <meta http-equiv="X-UA-Compatible" content="IE=8">
  <meta name="description" content="<%= @description %>">
  <meta name="keywords" content="<%= @keywords %>">
  <meta name="author" content="<%= @author %>">
  <meta charset="utf-8">  
  <link rel="icon" type="image/png" href="/favicon.png" />
  <% if settings.css_files == :minified %>
    <link type="text/css" rel="stylesheet" href="/blob.css?modified=<%= @minified_css %>" />
  <% else %>
    <link type="text/css" rel="stylesheet" href="/css/<%= @css %>" /><!-- Was #{css} -->
  <% end %>
  <% if settings.js_files == :minified %>
    <script type="text/javascript" src="/blob.js?modified=<%= @minified_js %>"></script>
  <% else %>
    <script type="text/javascript" src="/js/<%= @js %>"></script>
  <% end %>
  <!-- Was #{js} -->
</head>
<body>
  <header>
    <nav>
    </nav>
  </header>
  <main>
    <%= yield %>
  </main>
  <footer>
  </footer>
</body>
</html>